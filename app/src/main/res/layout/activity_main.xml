<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/seoulnamsamb"
        android:text="Let'scipe"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
/>
    <ImageView
        android:id="@+id/imagemain"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/main"
        tools:layout_editor_absoluteX="-228dp"
        tools:layout_editor_absoluteY="200dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/imagemain"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_ref"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ref" />

        <ImageButton
            android:id="@+id/imageButton_cam"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/cam" />

        <ImageButton
            android:id="@+id/imageButton_recipe"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/recipe"
            tools:layout_editor_absoluteY="520dp" />
    </LinearLayout>

</RelativeLayout>